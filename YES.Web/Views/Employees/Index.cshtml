<section class="content-header">
    <h4>Employees
                        <small>Control panel</small>
    </h4>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li class="active">Employees</li>
    </ol>
</section>

<!-- Main content -->
<section class="content" ng-controller="EmployeeController">
    <div class="col-xs-12 ContentPage">
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
            <div class="box-tools row tableHeader">
                <button type="button" class="btn btn-primary col-md-1 col-sm-1" ng-click="OpenCreateEmployeeModalPopup()" title="Create new employee record" data-target="#employee-modal" data-toggle="modal" ng-click="CreateEmployee()">Create</button>
                <div class="input-group col-md-11 col-sm-11">
                    <input type="text" name="table_search" class="form-control input-sm pull-right" style="width: 150px;" placeholder="Search" />
                    <div class="input-group-btn">
                        <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                    </div>
                </div>
            </div>
            <table class="table table-hover">
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Mobile No.</th>
                    <th>Email Id</th>
                    <th>Designation</th>
                    <th>City</th>
                    <th></th>
                </tr>
                <tr ng-repeat="employee in Employees">
                    <td>{{employee.ID}}</td>
                    <td>{{employee.FirstName}}</td>
                    <td>{{employee.LastName}}</td>
                    <td>{{employee.MobileNo}}</td>
                    <td>{{employee.EmailID}}</td>
                    <td>{{employee.DesignationName}}</td>
                    <td>{{employee.City}}</td>
                    <td><i class="fa fa-edit cursorPointer">&nbsp;&nbsp;<i class="cursorPointer fa fa-times"></i></td>
                </tr>

            </table>
        </div>
        <!-- /.box-body -->
    </div>

    <!-- EMPLOYEE CREATE MODAL -->
    <div class="modal fade" id="employee-modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title"><i class="fa fa-user"></i> Create New Employee</h4>
                </div>
                <div class="modal-body  box box-warning">
                    @*  <div class="box-header">
                                    <h3 class="box-title">General Elements</h3>
                                </div><!-- /.box-header -->*@
                    <div class="box-body">
                        <form role="form">
                            <table width="100%">
                                <tr class="row">
                                    <td class="col-md-6">
                                        <div class="form-group">
                                            <label>First Name</label>
                                            <input type="text" class="form-control" placeholder="Enter ..." ng-model="NewEmployee.FirstName" />
                                        </div>
                                    </td>

                                    <td class="col-md-6">
                                        <div class="form-group">
                                            <label>Middle Name</label>
                                            <input type="text" class="form-control" placeholder="Enter ..." ng-model="NewEmployee.MiddleName" />
                                        </div>
                                    </td>
                                </tr>
                                <tr class="row">
                                    <td class="col-md-6">
                                        <div class="form-group">
                                            <label>Last Name</label>
                                            <input type="text" class="form-control" placeholder="Enter ..." ng-model="NewEmployee.LastName" />
                                        </div>
                                    </td>
                                    <td class="col-md-6">
                                        <div class="form-group">
                                            <label>Designation</label>
                                            <select class="form-control" ng-model="NewEmployee.DesignationID">
                                                <option>Utter Pradesh</option>
                                                <option>Bihar</option>
                                                <option>Jharkhand</option>
                                                <option>Uttranchal</option>
                                                <option>Delhi</option>
                                            </select>
                                        </div>
                                    </td>
                                </tr>
                                <tr class="row">
                                    <td class="col-md-6">
                                        <div class="form-group">
                                            <label>Mobile Phone No.</label>
                                            <input type="text" class="form-control" placeholder="Enter ..." ng-model="NewEmployee.MobileNo" />
                                        </div>
                                    </td>
                                    <td class="col-md-6">
                                        <div class="form-group">
                                            <label>Alternate Phone No.</label>
                                            <input type="text" class="form-control" placeholder="Enter ..." ng-model="NewEmployee.AlternateMobileNo" />
                                        </div>
                                    </td>
                                </tr>
                                <tr class="row">
                                    <td class="col-md-6">
                                        <div class="form-group">
                                            <label>Email Address</label>
                                            <input type="text" class="form-control" placeholder="Enter ..." ng-model="NewEmployee.EmailId" />
                                        </div>
                                    </td>
                                    <td class="col-md-6">
                                        <div class="form-group">
                                            <label>State</label>
                                            <select class="form-control" ng-model="NewEmployee.StateID" ng-change="GetAllDistricts(NewEmployee.StateID)">
                                                <option value="{{state.Key}}" ng-repeat="state in States">{{state.Value}}</option>
                                                
                                            </select>
                                        </div>
                                    </td>
                                </tr>
                                <tr class="row">
                                    <td class="col-md-6">
                                        <div class="form-group">
                                            <label>District</label>
                                            <select class="form-control" ng-model="NewEmployee.DistrictID">
                                                 <option value="{{district.Key}}" ng-repeat="district in Districts">{{district.Value}}</option>
                                               
                                            </select>
                                        </div>
                                    </td>
                                    <td class="col-md-6">
                                        <div class="form-group">
                                            <label>Pin</label>
                                            <input type="text" class="form-control" placeholder="Enter ..." ng-model="NewEmployee.PinCode" />
                                        </div>
                                    </td>
                                </tr>
                                <tr class="row">
                                    <td class="col-md-6">
                                        <div class="form-group">
                                            <label>Address Line1</label>
                                            <textarea class="form-control" rows="3" placeholder="Enter ..." ng-model="NewEmployee.Address1"></textarea>
                                        </div>
                                    </td>
                                    <td class="col-md-6">
                                        <div class="form-group">
                                            <label>Address Lin2</label>
                                            <textarea class="form-control" rows="3" placeholder="Enter ..." ng-model="NewEmployee.Address2"></textarea>
                                        </div>

                                    </td>
                                </tr>
                            </table>
                        </form>
                    </div>
                    <!-- /.box-body -->

                </div>
                <div class="modal-footer clearfix">

                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-times"></i>Discard</button>

                    <button type="submit" class="btn btn-primary pull-left" ng-click="SaveEmployeeDetails(NewEmployee)"><i class="fa fa-user"></i> Save</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
</section>


<script src="../Scripts/AngularScripts/Employees/YesEmployeesService.js"></script>
<script src="~/Scripts/AngularScripts/State_District/YesStateDistrictService.js"></script>
<script src="../Scripts/AngularScripts/Employees/YesEmployeesController.js"></script>

